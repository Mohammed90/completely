{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "definitions": {
    "completion": {
      "type": "object",
      "properties": {
        "type": { "type": "string" }
      },
      "required": ["type"]
    }
  },
  "properties": {
    "command": { "type": "string" },
    "subcommands": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "command": { "type": "string" },
          "args": {
            "type": "array",
            "items": {
              "type": "object",
              "properties": {
                "name": { "type": "string" },
                "completion": { "$ref": "#/definitions/completion" }
              },
              "required": ["completion"],
              "additionalProperties": false
            }
          },
          "flags": {
            "type": "array",
            "items": {
              "type": "object",
              "properties": {
                "name": { "type": "string" },
                "type": {
                  "type": "string",
                  "enum": ["boolean", "string"]
                },
                "completion": { "$ref": "#/definitions/completion" }
              },
              "anyOf": [
                {
                  "properties": { "type": { "const": "string" } },
                  "required": ["name", "type", "completion"]
                },
                {
                  "properties": { "type": { "const": "boolean" } },
                  "required": ["name", "type"]
                }
              ]
            }
          }
        },
        "required": ["command", "args", "flags"],
        "additionalProperties": false
      }
    }
  },
  "required": ["command", "subcommands"],
  "additionalProperties": false
}
